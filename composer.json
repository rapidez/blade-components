{
    "name": "rapidez/blade-components",
    "description": "Collection of awesome Blade Components, used by Rapidez",
    "keywords": [
        "rapidez",
        "blade-components"
    ],
    "homepage": "https://github.com/rapidez/blade-components",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Roy Duineveld",
            "email": "royduineveld@gmail.com",
            "role": "Developer"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1|^8.2",
        "blade-ui-kit/blade-heroicons": "^2.4",
        "gehrisandro/tailwind-merge-laravel": "^1.2",
        "rapidez/blade-directives": "^0.6.0",
        "illuminate/view": "^11.29"
    },
    "require-dev": {
        "orchestra/workbench": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "Rapidez\\BladeComponents\\": "src"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Rapidez\\BladeComponents\\BladeComponentsServiceProvider"
            ]
        }
    },
    "scripts": {
        "preview-demo": "@php vendor/bin/testbench serve --ansi",
        "generate-demo": "@php vendor/bin/testbench generate-demo --ansi"
    }
}
